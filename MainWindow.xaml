                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Name="lblLookIn" Content="Look in:" Width="100" />
                        <TextBox x:Name="textBox2" Text="E:\Test" Width="400" Margin="10,0,0,0" />
                        <Button Name="btnOpenFolder" Click="btnOpenFolder_Click" Margin="10,0,0,0">Browse...</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button x:Name="button" IsDefault="True" Content="Start" Click="button_Click" Margin="30,0,0,0" Width="50"/>
                        <TextBlock x:Name="statusLebel" Text="" FontWeight="Bold" Foreground="Green" Margin="30,0,0,0"/>
                        <TextBlock x:Name="timeTakenLebel" FontWeight="Bold" Text="" Foreground="Green" Margin="30,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
