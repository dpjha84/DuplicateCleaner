                <ItemsControl Name="ic">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding Name}" IsExpanded="True">

                                <ItemsControl  Name="fo" ItemsSource="{Binding IsAsync=True}" HorizontalContentAlignment="Center">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="DarkSlateGray"  BorderThickness="2" CornerRadius="3" Margin="3" Padding="3">
                                                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">

                                                    <StackPanel Orientation="Horizontal">

                                                        <CheckBox Name="chk" Margin="2" Tag="{Binding}" Click="Chk_OnClick" ></CheckBox>
