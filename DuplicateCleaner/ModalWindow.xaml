<Window x:Class="DuplicateCleaner.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Duplicate Remover Pro"
        xmlns:local="clr-namespace:DuplicateCleaner"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Are you sure you want to delete duplicates?" />
            <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                <Button Width="100" Name="btnNo" Style="{StaticResource AccentButtonStyle}" Content="Cancel" Click="btnNo_Click" />
                <Button Width="200" Margin="20,0,0,0" Style="{StaticResource deleteButton}" Name="btnYes" Content="Go ahead with delete!" Click="btnYes_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
